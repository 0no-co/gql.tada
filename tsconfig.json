{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "paths": {
      "@gql.tada/*": ["node_modules/@gql.tada/*/src", "packages/*/src"]
    },
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "remove",
    "noEmit": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "declaration": false,
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src", "packages", "globals.d.ts"]
}
